{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "https://raw.githubusercontent.com/bryanrcarlson/Nsar.Nodes/master/Models/schema/v1/measurement.json#",
    "allOf": [
        {
            "$ref": "common.json#/definitions/cosmos-entity"
        },
        {
            "$ref": "common.json#/definitions/cosmos-internal"
        }
    ],
    "properties": {
        "fieldId": {
            "type": "string",
            "enum": [
                "CookEast",
                "CookWest",
                "BoydNorth",
                "BoydSouth"
            ]
        },
        "location": {
            "properties": {
                "coordinates": {
                    "items": [
                        {
                            "type": "number",
                            "minimum": 24,
                            "maximum": 50
                        },
                        {
                            "type": "number",
                            "minimum": -126,
                            "maximum": -66
                        }
                    ],
                    "type": "array"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "Point"
                    ]
                }
            },
            "type": "object",
            "required": [
                "coordinates",
                "type"
            ]
        },
        "measurementDateTime": {
            "type": "string",
            "format": "date-time"
        },
        "physicalQuantities": {
            "items": {
                "properties": {
                    "value": {
                        "type": "number"
                    },
                    "unit": {
                        "type": "string"
                    },
                    "qualityCode": {
                        "type": "integer"
                    },
                    "qcAppliedCode": {
                        "type": "integer"
                    },
                    "qcResultCode": {
                        "type": "number"
                    },
                    "submissionDateTime": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "sourceId": {
                        "type": "string"
                    }
                },
                "required": [
                    "qualityCode",
                    "qcAppliedCode",
                    "qcResultCode",
                    "submissionDateTime",
                    "sourceId",
                    "value",
                    "unit"
                ],
                "type": "object"
            },
            "type": "array"
        }
    },
    "required": [
        "measurementDateTime",
        "physicalQuantities",
        "location",
        "fieldId"
    ]
}